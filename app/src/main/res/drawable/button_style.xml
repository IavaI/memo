<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 当按钮获得焦点时 -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
<!--            <solid android:color="#155DA4"/> &lt;!&ndash; 按钮的填充颜色 &ndash;&gt;-->
            <corners android:radius="20dp"/> <!-- 按钮圆角的半径 -->
        </shape>
    </item>
    <!-- 当按钮被按下时 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
<!--            <solid android:color="#0F4C81"/> &lt;!&ndash; 按钮按下时的颜色，稍微深一点 &ndash;&gt;-->
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
<!--            <solid android:color="#155DA4"/> &lt;!&ndash; 默认的填充颜色 &ndash;&gt;-->
            <corners android:radius="20dp"/>
        </shape>
    </item>
</selector>