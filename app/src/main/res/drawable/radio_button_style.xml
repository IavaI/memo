<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 选中且不禁用的状态 -->
    <item android:state_checked="true" android:color="#FF0000">
        <shape android:shape="oval">
            <solid android:color="#FF0000"/> <!-- 选中时的填充颜色 -->
            <size android:width="24dp" android:height="24dp"/> <!-- 圆的大小 -->
            <stroke android:width="2dp" android:color="#FFFFFF"/> <!-- 边框颜色 -->
        </shape>
    </item>
    <!-- 未选中且不禁用的状态 -->
    <item android:color="#FFFFFF">
        <shape android:shape="oval">
            <solid android:color="#DDDDDD"/> <!-- 未选中时的填充颜色 -->
            <size android:width="24dp" android:height="24dp"/> <!-- 圆的大小 -->
            <stroke android:width="2dp" android:color="#FFFFFF"/> <!-- 边框颜色 -->
        </shape>
    </item>
    <!-- 禁用状态 -->
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="#B3B3B3"/> <!-- 禁用时的填充颜色 -->
            <size android:width="24dp" android:height="24dp"/> <!-- 圆的大小 -->
        </shape>
    </item>
</selector>